@using Entities.Models
@model Customer
@{
    ViewData["Title"] = "Update Profile";
}

<style>
    body {
        background-image: url('https://img.taste.com.au/YfX0h9hC/taste/2017/10/mexican-taco-pizza-131640-1.jpg');
        font-family: 'Shadows Into Light', cursive;
        font-size: 20px;
    }


    #btn-save {
        width: 40%;
        margin-left: 10%;
        margin-top: 30px;
        background-color: cadetblue;
        border: none;
        opacity: 0.85;
    }

    .credit-form {
        width: 600px;
    }

    #btn-save:hover {
        opacity: 1;
    }

    label, input {
        font-family: sans-serif;
        font-size: 14px;
    }

    .register-body {
        border-radius: 5px;
        padding: 50px;
        opacity: 0.95;
        background-color: white;
    }

        .register-body:hover {
            opacity: 1;
        }

    #btn-save {
        margin-left: 300px;
    }
</style>

<br />
<br />
<br />
<div class="register-body">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post, new { @class = "credit-form", role = "form" }))
            {
                <h4>Update your profile here</h4>
                <hr />

                <div class="form-group">
                    <label for="card-name">First Name</label>
                    <input id="card-name" name="firstname" onkeypress="return isLetter(event)" class="form-control" style="width: 250px" required value="@Model.CustomerFirstName" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="card-name">Last Name</label>
                    <input id="card-name" name="lastname" onkeypress="return isLetter(event)" class="form-control" style="width: 250px" required value="@Model.CustomerLastName" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="card-name">Address</label>
                    <input id="card-name" name="address" class="form-control" style="width: 250px" required value="@Model.CustomerAddress" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="card-name">State</label>
                    <input id="card-name" name="state" class="form-control" style="width: 250px" required value="@Model.State" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="card-name">Zip Code</label>
                    <input id="card-name" name="zipcode" class="form-control" style="width: 250px" required value="@Model.ZipCode" />
                    <span class="text-danger"></span>
                </div>


                <br>
                <button type="submit" id="btn-save" class="btn btn-primary">Save</button>
            }
        </div>
    </div>
</div>

<script>
    function isNumber(event) {
        var keycode = event.keyCode;
        if (keycode > 48 && keycode < 57) {
            return event;
        }
        return false;
    }
    function isLetter(event) {
        var keycode = event.keyCode;
        if ((keycode >= 65 && key <= 90) || keycode == 32) {
            return event;
        }
        return false;
    }
</script>
