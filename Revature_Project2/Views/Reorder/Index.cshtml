@model IEnumerable<Entities.Models.Order>

@{
    ViewData["Title"] = "Order History";
}
<style>
    body {
        background-image: url('https://img.taste.com.au/YfX0h9hC/taste/2017/10/mexican-taco-pizza-131640-1.jpg');
        font-family: 'Shadows Into Light', cursive;
        font-size: 20px;
        user-select: none;
    }

    .container-shoppingCart {
        border-radius: 15px;
        background-color: white;
        color: black;
        padding: 10px;
        width: 60%;
        margin-top: 180px;
        opacity: 1;
        user-select: none;
        text-align: center;
        position: absolute;
        top: 0%;
        left: 20%;
    }

    table {
        width:75%;
        position: relative;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
    }

        table tr {
        font-family: sans-serif;
        font-size: 15px;
    }

    table tr th {
        color: cadetblue;
        position: sticky;
        top: 0px;
        background-color: white;
    }

    table tr td {
        border-bottom: 1px solid cadetblue;
        padding-bottom: 20px;
        padding-top: 20px;
    }
    #btn-details {
        background-color: lightskyblue;
        color: white;
        padding: 6px;
        padding-right: 15px;
        padding-left: 15px;
        border-radius: 5px;
        text-decoration: none;
        opacity: 0.8;
    }
    #btn-details:hover {
        opacity: 1;
    }


</style>


<div class="container-shoppingCart" id="container-shoppingCart">
    <br>
    <div id="shoppingCart-header">
        <div>
            <h1 style="color: orange">Past Orders</h1>
            <img src="https://images.vexels.com/media/users/3/132114/isolated/lists/5367202ad4dd11725544cb3008049f96-shoppingcart-flat-icon.png" width="42" height="42" />
        </div>
        <hr />
    </div>
    <div id="shoppingCart-items" style="height: 480px; overflow: scroll; overflow-x: hidden; text-align: left">
        <table>
            <thead>
                <tr>
                    <th style="width: 17%">
                        Order Number
                    </th>
                    <th style="width: 28%">
                        Date/Time
                    </th>
                    <th>
                        Order Price
                    </th>
                    <th>
                        Total Items
                    </th>

                    <th style="width: 10%"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDateTime)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => item.OrderPrice)
                        </td>
                        <td>
                            @(item.Pizzas.Count+item.Drinks.Count)
                        </td>
                        <td>
                            <a id="btn-details" asp-action="Details" asp-route-id="@item.OrderID">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
    @*<p>Total price: @(Model != null ? Model.OrderPrice : 0)</p>*@
    @*<button id="btn-checkout" onclick="location.href='@Url.Action("Menu", "Home")'" style="background-color:cadetblue; border-radius:5px">Go Menu!</button>*@
</div>



