    }

    #li-spPizza{
        color: cadetblue;
        opacity: 1;
        transform: scale(1.315);
        background-color: white;
        font-size: 35px;
    }

    button:focus{
        outline: none; 
    }

    .pizza-form-part{
        height: 390px;
        font-family: sans-serif; 
    }

    .pizza-form-part input{
        transform: scale(1.4);
    }

    #label-title{
        font-family: 'Shadows Into Light', cursive;
        color:goldenrod;
        font-size: 25px;
    }

    label{
        font-size: 18px;
        font-family: 'Questrial', sans-serif;
    }
    
    table tr{
        font-family: sans-serif;
        font-size: 15px;
    }

    table tr th{
        color: cadetblue;
    }

    .btn{
        padding: 5px;
        padding-right: 50px;
        padding-left: 50px;
        border: none;
        border-radius: 0;
        background-color: orange;
        opacity: 0.55;
    }

    .btn:hover{
        opacity: 0.9;
        background-color: orange;
    }

    .card{
        width: 260px; 
        border:1px solid cadetblue; 
        text-align:center; 
        display: inline-block; 
        padding-bottom: 10px;
    }

    .items-drinks, .items-specialityPizza{
        height:500px; 
        overflow:scroll; 
        overflow-x: hidden; 
        margin-bottom: 10px;
    }

  
