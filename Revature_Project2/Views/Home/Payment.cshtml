
@{
    ViewData["Title"] = "Payment";
}

    <style>
        body {
            background-image: url('https://img.taste.com.au/YfX0h9hC/taste/2017/10/mexican-taco-pizza-131640-1.jpg');
            font-family: 'Shadows Into Light', cursive;
            font-size: 20px;
        }

        form {
            width: 600px;
        }

        #btn-save {
            width: 40%;
            margin-left: 10%;
            margin-top: 30px;
            background-color: cadetblue;
            border: none;
            opacity: 0.85;
        }

        #btn-save:hover {
            opacity: 1;
        }

        label, input {
            font-family: sans-serif;
            font-size: 14px;
        }

        .register-body {
            border-radius: 5px;
            padding: 50px;
            opacity: 0.95;
            background-color: white;
        }

        .register-body:hover {
            opacity: 1;
        }

        #btn-save {
            margin-left: 300px;
        }

    </style>

<br />
<br />
<br />
<div class="register-body">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <h4>To save your credit card for payment.</h4>
                <hr />

                <div class="form-group">
                    <label>Name on card</label>
                    <input class="form-control" style="width: 250px" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Card number</label>
                    <input class="form-control" style="width: 350px" placeholder="" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Expiration date</label>
                    <input class="form-control" style="width: 180px" type="month" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>CVV</label>
                    <input class="form-control" style="width: 100px" type="text" pattern="[0-9]{3}" maxlength="3"  />
                    <span class="text-danger"></span>
                </div>
                <br>
                <button type="submit" id="btn-save" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
