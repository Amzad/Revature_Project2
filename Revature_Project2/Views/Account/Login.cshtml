@using Entities.Models
@model LoginInputModel

@{
    ViewData["Title"] = "Log in";
}

<style>

    body {
    background-image: url('https://img.taste.com.au/YfX0h9hC/taste/2017/10/mexican-taco-pizza-131640-1.jpg');
    font-family: 'Shadows Into Light', cursive;
    font-size: 20px;
}

    #btn-login {
        background-color: cadetblue;
        border: none;
        opacity: 0.85;
    }

        #btn-login:hover {
            opacity: 1;
        }

    label, input {
        font-family: sans-serif;
        font-size: 14px;
    }

    #nav-menu {
        list-style-type: none;
        padding: 0;
        text-align: center;
        margin-top: 180px;
    }

        #nav-menu > li {
            padding: 0px;
            width: 480px;
            margin-top: 20px;
            transition-duration: 1s;
            user-select: none;
        }

        #nav-menu img {
            transform: scale(0.5);
        }

    .login-body {
        background-color: white;
        opacity: 0.95;
        padding: 50px;
        border-radius: 5px;
    }

        .login-body:hover {
            opacity: 1;
        }
</style>

<br />
<br />
<br />
<div class="login-body">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CustomerEmail">Email</label>
                    <input asp-for="CustomerEmail" class="form-control" required />
                    <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" id="btn-login" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
