
@{
    ViewData["Title"] = "Add Credit Card";
}

    <style>
        body {
            background-image: url('https://img.taste.com.au/YfX0h9hC/taste/2017/10/mexican-taco-pizza-131640-1.jpg');
            font-family: 'Shadows Into Light', cursive;
            font-size: 20px;
        }


        #btn-save {
            width: 40%;
            margin-left: 10%;
            margin-top: 30px;
            background-color: cadetblue;
            border: none;
            opacity: 0.85;
        }

        .credit-form{
            width: 600px;
        }

        #btn-save:hover {
            opacity: 1;
        }

        label, input {
            font-family: sans-serif;
            font-size: 14px;
        }

        .register-body {
            border-radius: 5px;
            padding: 50px;
            opacity: 0.95;
            background-color: white;
        }

        .register-body:hover {
            opacity: 1;
        }

        #btn-save {
            margin-left: 300px;
        }

    </style>

<br />
<br />
<br />
<div class="register-body">
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post" class="credit-form">
                <h4>To save your credit card for payment.</h4>
                <hr />

                <div class="form-group">
                    <label style="font-weight: 800; color: cadetblue" for="card-type">Type of Credit Card</label>
                    <select required>
                        <option disabled selected style="font-family:sans-serif;">------</option>
                        <option>VISA</option>
                        <option>Master</option>
                        <option>Discover</option>
                        <option>American Express</option>
                        <option>UnionPay</option>
                        <option>Other</option>
                    </select>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="card-name">Name on card</label>
                    <input id="card-name" onkeypress="return isLetter(event)" class="form-control" style="width: 250px" required />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="card-number">Card number</label>
                    <input id="card-number" type="number" onkeypress="return isNumber(event) " class="form-control" style="width: 350px" placeholder="" maxlength="16"/>
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="card-expiration">Expiration date</label>
                    <input id="card-expiration" class="form-control" style="width: 180px" type="month" />
                    <span class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="card-cvv">CVV</label>
                    <input id="card-cvv" class="form-control" onkeypress="return isNumber(event)" style="width: 100px" type="text"  maxlength="4" />
                    <span class="text-danger"></span>
                </div>

                <br>
                <button type="submit" id="btn-save" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>

<script>
    function isNumber(event) {
        var keycode = event.keyCode;
        if(keycode > 48 && keycode < 57){
            return event;
        }
            return false;
        }
    function isLetter(event) {
        var keycode = event.keyCode;
        if ((keycode >= 65 && key <= 90) || keycode == 32) {
            return event;
        }
        return false;
    }
</script>
